RewriteEngine On
Options +FollowSymLinks
#ligne suivante Ã  retirer pour empecher l acces aux repertoires

RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([a-zA-Z0-9_:\-]+)/?$ index.php?page=$1 [L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^category/(.+)/?$ index.php?page=category&category=$1 [L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^topic/(.+)/?$ index.php?page=topic&topic=$1 [L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^profil/(.+)/?$ index.php?page=profil&login=$1 [L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^admin/(.+)/?$ index.php?page=admin&page_admin=$1 [L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.+)/(.+)/?$ index.php?page=singlecategory&category=$1&topic=$2 [L]


RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.+)/(.+)/createPost/?$ index.php?page=createPost [L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.+)/(.+)/remotePost/?$ index.php?page=createPost [L]
