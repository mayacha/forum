<!-- Formulaire de modification d'une catégorie dans l'administration -->
<form action="admin_category" method="post" class="js-category-form-modif col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
	<input name="id" value="<?=$category->getId()?>" hidden  id="category-modif-id-<?=$category->getId()?>">
	<div class="form-group">
		<label for="category-modif-name" class="sr-only">Titre de la catégorie :</label>
		<input type="text" class="form-control" id="category-modif-name-<?=$category->getId()?>" name="name" value="<?=htmlentities($category->getName())?>" placeholder="Titre de la catégorie">
	</div>
	<div class="form-group">
